{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "schematicCollections": ["angular-eslint"]
  },
  "newProjectRoot": "projects",
  "projects": {
    "docs": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "viewEncapsulation": "None"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "stylePreprocessorOptions": {
              "includePaths": ["projects"]
            },
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["src/styles.scss"],
            "server": "src/main.server.ts",
            "outputMode": "server",
            "ssr": {
              "entry": "src/server.ts"
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1MB",
                  "maximumError": "1.5MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "docs:build:production"
            },
            "development": {
              "buildTarget": "docs:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    },
    "ng-deco": {
      "projectType": "library",
      "schematics": {
        "@schematics/angular:component": {
          "path": "projects/@avine/ng-deco",
          "style": "scss",
          "viewEncapsulation": "None"
        },
        "@schematics/angular:directive": {
          "path": "projects/@avine/ng-deco"
        },
        "@schematics/angular:service": {
          "path": "projects/@avine/ng-deco"
        },
        "@schematics/angular:pipe": {
          "path": "projects/@avine/ng-deco"
        },
        "@schematics/angular:resolver": {
          "path": "projects/@avine/ng-deco"
        },
        "@schematics/angular:guard": {
          "path": "projects/@avine/ng-deco"
        },
        "@schematics/angular:interceptor": {
          "path": "projects/@avine/ng-deco"
        }
      },
      "root": "projects/@avine/ng-deco",
      "sourceRoot": "projects/@avine/ng-deco/src",
      "prefix": "dc",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/@avine/ng-deco/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/@avine/ng-deco/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/@avine/ng-deco/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/@avine/ng-deco/**/*.ts",
              "projects/@avine/ng-deco/**/*.html"
            ],
            "eslintConfig": "projects/@avine/ng-deco/eslint.config.js"
          }
        }
      }
    }
  }
}
